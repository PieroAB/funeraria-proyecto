@model Proyecto_Funeraria2020.Models.Personal

@{
    ViewBag.Title = "login";
    Layout = "";
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="https://kit-pro.fontawesome.com/releases/v5.15.1/css/pro.min.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />
}


<body class="cont">
        <div class="cuerpo">
            <div class="login">
                @using (Html.BeginForm("login", "Personal"))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="login__formulario">
                    <div class=""><img style="width:50%;height:auto;" src="~/Imagenes/Login/usuario.png" /></div>
                    <div class="login__fila">
                        <i class="fa fa-user"></i>
                        <input type="text" class="login__input name" placeholder="Usuario" name="x" />
                    </div>
                    <div class="login__fila">
                        <i class="fa fa-lock"></i>
                        <input type="password" class="login__input pass" placeholder="Contraseña" name="y" />
                    </div>
                    <input type="submit" value="Ingresar" class="login__enviar" />
                    <p class="mensaje"> @ViewBag.login</p>


                    @if (TempData["login"] != null)
                    {
                        <div class="form-group flexible text-info mensaje">
                            @TempData["login"]
                            </div>
                     }

                    <p class="login__olvidar"> &nbsp;<a>Olvidaste tu contraseña ?</a></p>
                    </div>
                }
            </div>
        </div>
</body>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/jquery-3.4.1.js"></script>


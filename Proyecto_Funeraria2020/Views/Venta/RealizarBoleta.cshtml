@model Proyecto_Funeraria2020.Models.Transaccion

@{
    ViewBag.Title = "RealizarBoleta";
}

<link href="~/Content/responsivo.css" rel="stylesheet" />



<div style="display:flex;justify-content:space-between">

    <h2>Transacción</h2>

    <div style="width:40%;margin-top:20px;">
        @Html.ActionLink("Volver a la lista", "Canasta", null, new { @class = "btn btn-warning col-md-6 ", @style = "float:right;" })
    </div>
</div>


<div class="prodser">
    @using (Html.BeginForm("RealizarBoleta", "Venta", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <h4>Detalle Donde se Realizará el servicio</h4>
        <hr /><br /><br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group flexible">
                    @Html.Label("Representante ", htmlAttributes: new { @class = "control-label  col-md-4 col-xs-3" })
                    <div class="col-md-7 col-xs-6">
                        @Html.DropDownList("codRepresentante", (SelectList)ViewBag.repre, new { @class = "btn btn-default" })
                    </div>
                </div>

                <div class="form-group flexible">
                    @Html.Label("Dirección Sepelio ", htmlAttributes: new { @class = "control-label  col-md-4 col-xs-3" })
                    <div class="col-md-7 col-xs-6">
                        @Html.EditorFor(model => model.dirSepelio, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.dirSepelio, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group flexible">
                    @Html.Label("Cementerio ", htmlAttributes: new { @class = "control-label  col-md-4 col-xs-3" })
                    <div class="col-md-7 col-xs-6">
                        @Html.EditorFor(model => model.nomCementerio, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nomCementerio, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group flexible">
                    @Html.Label("Fecha Sepelio ", htmlAttributes: new { @class = "control-label  col-md-4 col-xs-3" })
                    <div class="col-md-7 col-xs-6">
                        @Html.EditorFor(model => model.fechaSepelio, new { Type = "datetime", htmlAttributes = new { @class = "form-control", @Value = @DateTime.Now.ToShortDateString() } })
                        @Html.ValidationMessageFor(model => model.fechaSepelio, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group flexible">
                    <br />
                <input type="submit" value="Guardar" class="btn btn-success col-md-4  col-xs-5" />
                @Html.ActionLink("Nuevo", "Tienda", null, new { @class = "btn btn-success col-md-3  col-xs-5" })
            </div>

            <div class="mensaje text-danger" style=" border: 1px solid red; color:#E01111; text-align: center;">
                @ViewBag.mensaje
            </div>
            </div>
            }
        </div>

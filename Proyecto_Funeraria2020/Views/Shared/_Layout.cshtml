<!DOCTYPE html>
<html>
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="https://kit-pro.fontawesome.com/releases/v5.15.1/css/pro.min.css" rel="stylesheet" />

    <link href="~/Content/MenuDesplegable.css" rel="stylesheet" />
</head>

<style>

    .tabla {
        background-color: #272525d9;
        width: 100%;
        color: #c7f9f2;
        border: 2px solid black;
        height: auto;
        min-height: 150px;
    }

    .foto {
        min-width: 200px;
        max-width:200px;
        min-height:200px;
        max-height:200px;
        margin:50px 0px;
        color: white;
    }

    .contenedor-menu > .menu > li > a {
        color: #fff;
        display: block;
        padding: 13px 20px;
        text-decoration: none;
        transition-property: padding-left,border-left,border-right;
        transition-duration: 0.5s, 0.3s,0.3s;
        transition-timing-function: ease-in-out;
        -webkit-transition-property: padding-left,border-left,border-right;
        -webkit-transition-duration: 0.5s, 0.3s,0.3s;
        -webkit-transition-timing-function: ease-in-out;
    }

    .menu li a {
        color: #fff;
        display: block;
        padding: 15px 20px;
        text-decoration: none;
        transition-property: padding-left,border-left,border-right;
        transition-duration: 0.5s, 0.3s,0.3s;
        transition-timing-function: ease-in-out;
        -webkit-transition-property: padding-left,border-left,border-right;
        -webkit-transition-duration: 0.5s, 0.3s,0.3s;
        -webkit-transition-timing-function: ease-in-out;
    }

    .menu > li > a:hover, .menu > li > a:active {
        color: #bbd7da;
        padding-left: 50px;
        text-decoration: none;
        border-left: 3px solid #d9e712;
        border-right: 3px solid #d9e712;
        opacity: 1;
    }

    .contenedor-menu .menu ul li a {
        background: #424242;
        color: #e9e9e9;
        padding-left: 80px;
        transition-property: padding-left,border-left,border-right;
        transition-duration: 0.5s, 0.3s,0.3s;
        transition-timing-function: ease-in-out;
        -webkit-transition-property: padding-left,border-left,border-right;
        -webkit-transition-duration: 0.5s, 0.3s,0.3s;
        -webkit-transition-timing-function: ease-in-out;
    }



    .contenedor-menu .menu .activado > a {
        background: #1a95d5;
        color: #fff;
    }

    .menu > ul > li > a:hover, .menu > ul > li > a:active {
        background: #424242;
        color: #e9e9e9;
        border-left: 3px solid #d9e712;
        border-right: 3px solid #d9e712;
        opacity: 1;
        padding-left: 200px;
    }


    .paginacion {
        text-align: center;
        margin-top: 7px;
    }

    .paginacion > a {
        margin-right: 5px;
    }

    .pagina {
        margin: 0 10px;
        font-weight: 900;
        font-size: 1.2em;
    }

</style>

<body style="background-image: url(/Imagenes/Fondos/fondo4.jpg); background-size: 100%;">
    <div class="contenedor-menu scroll" style="overflow-y:auto;">
        <a href="#" class="btn-menu">Menú <i class=" icono fa fa-bars"></i></a>


        <div style="margin-left:15%;width:70%;margin-right:15%;" class=" ">
            <img class="foto" src="@Url.Content(ViewBag.imagen)" alt="imagen no disponible" />
            @ViewBag.login

        <div class="form-group flexible text-info mensaje">

            @if (TempData["login"] != null)
            {

                @TempData["login"];
            }

        </div>
        </div>


        <ul class="menu">



            <li>
                <a href="#"><i class="icono izquierda fa fa-home"></i>@ViewBag.personal    <i class="icono derecha fa fa-chevron-down"></i></a>
                <ul>
                    <li><a href="@Url.Action("CerrarSesion", "Personal")">Cerrar Sesión</a></li>
                </ul>

            </li>
            <hr>

            @if ((int)ViewBag.cargo == 1)
            {
                <li><a href="@Url.Action("Personales", "Personal")"><i class="icono izquierda fa fa-user"></i>Personal</a></li>
                <hr>

            }

            @if ((int)ViewBag.cargo == 5 || (int)ViewBag.cargo == 1)
            {
                <li>
                    <a href="#"><i class="icono izquierda fa fa-star"></i>Producto / Servicio <i class="icono derecha fa fa-chevron-down"></i> </a>
                    <ul>
                        <li><a href="@Url.Action("CreateProducto", "Item")">Producto</a></li>
                        <hr />
                        <li><a href="@Url.Action("CreateServicio", "Item")">Servicio</a></li>
                    </ul>
                </li>
                <hr>
                <li><a href="@Url.Action("Planes", "Planes")"><i class="icono izquierda fas fa-file-alt"></i>Planes</a></li>
                <hr>

            }
            @if ((int)ViewBag.cargo == 2 || (int)ViewBag.cargo == 5 || (int)ViewBag.cargo == 1)
            {

                <li><a href="@Url.Action("Representantes", "Representante")"><i class="icono izquierda fas fa-user-friends"></i>Representante</a></li>
                <hr>
                <li><a href="@Url.Action("Difuntos", "Difunto")"><i class="icono izquierda fas fa-coffin-cross"></i>Difunto</a></li>
                <hr>
            }
            @if ((int)ViewBag.cargo == 2 || (int)ViewBag.cargo == 4 || (int)ViewBag.cargo == 1)
            {
                <li><a href="@Url.Action("Boletas", "Venta")"><i class="icono izquierda fas fa-cash-register"></i>Ventas</a></li>
                <hr>
            }
            </ul>

    </div>




    <div class="content">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>

    <footer class="footer">
        <div class="container-fluid">
            <nav class="pull-left">

            </nav>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/menu.js"></script>

</body>


</html>
